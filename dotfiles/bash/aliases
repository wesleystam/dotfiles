alias reload_bash="echo reloading shell; . ~/.bash_profile"
alias reload!="echo restarting app; touch tmp/restart.txt"
alias pow="echo restarting pow; launchctl unload "$HOME/Library/LaunchAgents/cx.pow.powd.plist" 2>/dev/null || true; launchctl load -Fw "$HOME/Library/LaunchAgents/cx.pow.powd.plist" 2>/dev/null"
alias s="cd .."

alias vi="mvim -v"

alias gd="cd vendor/plugins/gaia"
alias sd="cd ../../../"

alias hosts="vi /etc/hosts"
alias apache="vi /etc/apache2/extra/httpd-vhosts.conf"
